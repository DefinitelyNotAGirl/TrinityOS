extern "C" void write64(u64 addr,u64 value);
extern "C" void write32(u64 addr,u32 value);
extern "C" void write16(u64 addr,u16 value);
extern "C" void write8(u64 addr,u8 value);
extern "C" u64 get64(u64 addr);
extern "C" u32 get32(u64 addr);
extern "C" u16 get16(u64 addr);
extern "C" u8 get8(u64 addr);


